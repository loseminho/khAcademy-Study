		view = new StudentView();
	}
	public void main() {
		while(true) {
			int sel = view.showMenu();
			switch(sel) {
			case 1:
				insertStudent();
				break;
			case 2:
				
				break;
			case 3:
				
				break;
			case 4:
				
				break;
			case 5:
				
				break;
			case 0:
				
				return;

			}
		}
	}
	public void insertStudent() {
		Student s = view.insertStudent();
//		student1[index] = s;
//		index++;
		students.add(s);//list 가장 뒤에 추가
	}
	
}
