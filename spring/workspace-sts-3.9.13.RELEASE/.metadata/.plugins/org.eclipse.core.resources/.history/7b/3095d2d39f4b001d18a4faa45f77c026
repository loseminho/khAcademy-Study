<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>

    <script src="https://code.jquery.com/jquery-3.6.1.js"></script>
    
    <h3>읽지 않은 쪽지 수 : <span id="dmCount"></span></h3>
    <input type="hidden" id="memmberId" value="${sessionScope.m.memberId} ">
    
    <script>
    	let memberId;
    	let ws;
    	$(function(){
    		memberId = $("#memberId").val();
    		
    		ws = new WebSoket("ws://192.168.10.36/dm.do");
    		ws.onOpen = onOpen;
    		ws.onmessage = receiveMsg;
    		ws.onclose = onClose;
    	});
    	function onOpen(){
    		console.log("쪽지 소켓 연결");
    		const data = {type:"enter",memberId:memberId};
    		ws.send(JSON.stringify(data));
    	}
    	function receiveMsg(param){
    		console.log(param.data);
    		$("#dmCount").text(param.data);
    	}
    	function onClose(){
    		console.log("쪽지 소켓 연결 종료");
    	}
    </script>